AC_INIT(gnubg.c)
AM_INIT_AUTOMAKE(gnubg,0.02)
AM_CONFIG_HEADER(config.h)

if test -f config.options
then
  . ./config.options
fi

dnl Checks for programs.
AC_PROG_AWK
AC_PROG_CC
AC_PROG_INSTALL
AC_PROG_LN_S

dnl Checks for libraries.
AC_CHECK_LIB(m, sqrt)
AC_ARG_WITH(readline,[  --with-readline         support fancy command line editing])
if test "$with_readline" != "no"; then
  for lib in termcap ncurses curses; do
    AC_CHECK_LIB($lib, tgetent, LIBS="-l$lib $LIBS"; break)
  done
  AC_CHECK_LIB(readline, readline)
fi
AC_ARG_WITH(gdbm,[  --with-gdbm             use GNU gdm for position databases])
if test "$with_gdbm" != "no"; then
  AC_CHECK_LIB(gdbm, gdbm_open)
fi
AC_CHECK_LIB(dl, dlopen)

dnl Checks for header files.
AC_HEADER_STDC
AC_HEADER_TIME
AC_CHECK_HEADERS(alloca.h fcntl.h sys/file.h sys/ioctl.h limits.h sys/mman.h pwd.h sys/time.h sys/types.h unistd.h sys/wait.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T

dnl Checks for library functions.
AC_FUNC_MMAP
AC_CHECK_FUNCS(sigaction sigvec,break)
AC_CHECK_FUNCS(sigprocmask sigblock,break)
AC_CHECK_FUNCS(alloca getlogin getpwuid gettimeofday isatty random)
AC_REPLACE_FUNCS(rand_r)
AC_TYPE_SIGNAL

dnl Check for GTK
AM_PATH_GTK(1.2.0)
AM_CONDITIONAL(NOX, test "$no_gtk" = "yes" )

dnl Record installation paths.
AC_DEFINE_DIR(DATADIR, datadir)

AC_CONFIG_SUBDIRS(lib doc)

AC_OUTPUT(Makefile)

